{
    "manifest_version": 3,
    "name": "Check-Before-Click",
    "version": "1.0",
    "description": "Warns users before clicking suspicious links",
    "icons": {
        "128": "Icon128px.png",
        "48": "Icon128px.png",
        "16": "Icon128px.png"
    },
    "action": {
        "default_icon": "Icon128px.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}
